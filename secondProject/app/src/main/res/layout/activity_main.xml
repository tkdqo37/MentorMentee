<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#87CEFA"
        tools:context=".StartActivity" android:orientation="vertical">
    <ImageView
            android:layout_width="158dp"
            android:layout_height="182dp" app:srcCompat="@drawable/readingtwo"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView2"
            android:layout_gravity="start"
            android:layout_marginBottom="340dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_weight="1"/>
    <ImageView
            android:layout_width="143dp"
            android:layout_height="203dp" app:srcCompat="@drawable/running"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="end"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <TextView
            android:text="Mentee"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView2" android:textSize="50sp" app:fontFamily="@font/aclonica"
            android:layout_marginLeft="148dp" android:layout_marginStart="148dp" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp" android:layout_marginRight="60dp" android:layout_weight="1"/>
    <TextView
            android:text="Mentor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="50sp"
            app:fontFamily="@font/aclonica" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp" android:layout_marginBottom="160dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_weight="1"/>
    <ImageView
            android:src="@drawable/music"
            android:layout_width="127dp"
            android:layout_height="164dp"
            android:id="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="228dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp"/>
</android.support.constraint.ConstraintLayout>