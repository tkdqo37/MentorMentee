<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#87CEFA"
        tools:context=".RegisterMentorActivity" android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:gravity="center">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvUpdateMentorCode" android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="36sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="이름"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/etUpdateNameMentor" android:layout_weight="1" android:hint="이름을 입력하세요."
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:inputType="textMultiLine"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="수강명"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/etUpdateSubjectMentor" android:layout_weight="1" android:hint="수강명을 입력하세요."
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="지역"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/etUpdateLocationMentor" android:layout_weight="1" android:hint="지역을 입력하세요."
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:inputType="textMultiLine"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="성별"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/etUpdateGenderMentor" android:layout_weight="1" android:hint="본인의 성별을 입력하세요."
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:inputType="textMultiLine"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="수강료"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/etUpdateMoneyMentor" android:layout_weight="1" android:inputType="number"
                android:hint="1시간당 수강료를 입력하세요." android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <Button
                android:text="취소"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnUpdateCancelMentor" android:layout_weight="1"/>
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button3" android:layout_weight="1"
                android:visibility="invisible"/>
        <Button
                android:text="수정완료"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnUpdateInsertMentor"
                android:layout_weight="1"/>
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button4" android:layout_weight="1"
                android:visibility="invisible"/>
        <Button
                android:text="초기화"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnUpdateDeleteMentor"
                android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>